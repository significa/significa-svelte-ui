{
  "name": "@significa/svelte-ui",
  "version": "0.0.1-development",
  "repository": "github:significa/significa-svelte-ui",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npm run storybook",
    "dev:kit": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "package:watch": "svelte-kit sync && svelte-package -w",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:unit": "vitest",
    "lint": "prettier --check . && eslint .",
    "validate": "npm run check && npm run lint",
    "format": "prettier --plugin-search-dir . --write .",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./actions": {
      "types": "./dist/actions/index.d.ts",
      "svelte": "./dist/actions/index.js",
      "default": "./dist/actions/index.js"
    },
    "./tailwind-preset": {
      "types": "./dist/tailwind-preset.d.cts",
      "require": "./dist/tailwind-preset.cjs",
      "default": "./dist/tailwind-preset.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "actions": [
        "./dist/actions/index.d.ts"
      ],
      "tailwind": [
        "./dist/significa-tailwind.d.cts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "peerDependencies": {
    "autoprefixer": "^10.4.14",
    "class-variance-authority": "^0.5.1",
    "clsx": "^1.2.1",
    "postcss": "^8.4.21",
    "svelte": "^3.59.2",
    "tailwind-merge": "^1.11.0",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.0.2",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-interactions": "^7.0.2",
    "@storybook/svelte": "^7.0.2",
    "@storybook/sveltekit": "^7.0.2",
    "@storybook/testing-library": "^0.1.0",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.7.0",
    "@sveltejs/package": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.14",
    "class-variance-authority": "^0.5.1",
    "clsx": "^1.2.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-svelte": "^2.33.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.9.0",
    "prettier-plugin-tailwindcss": "^0.2.6",
    "publint": "^0.1.11",
    "storybook": "^7.0.2",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.1",
    "tailwind-merge": "^1.11.0",
    "tailwindcss": "^3.3.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  }
}
