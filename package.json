{
  "name": "@significa/significa-svelte-ui",
  "version": "0.0.1-development",
  "repository": "github:significa/significa-svelte-ui",
  "publishConfig": {
    "@significa:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package && npm run build:styles",
    "build:styles": "postcss ./src/**/*.css --base ./src/lib --dir ./package",
    "prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@storybook/addon-essentials": "^7.0.0-alpha.49",
    "@storybook/addon-interactions": "^7.0.0-alpha.49",
    "@storybook/addon-links": "^7.0.0-alpha.49",
    "@storybook/svelte": "^7.0.0-alpha.49",
    "@storybook/svelte-vite": "^7.0.0-alpha.49",
    "@storybook/testing-library": "^0.0.13",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/package": "next",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-storybook": "^0.6.7",
    "eslint-plugin-svelte3": "^4.0.0",
    "jsdom": "^20.0.2",
    "postcss-cli": "^10.0.0",
    "postcss-load-config": "^4.0.1",
    "postcss-mixins": "^9.0.4",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "storybook": "^7.0.0-alpha.49",
    "svelte": "^3.53.1",
    "svelte-check": "^2.7.1",
    "svelte-loader": "^3.1.4",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4",
    "vite": "^3.1.0",
    "vitest": "^0.25.2"
  },
  "type": "module"
}
